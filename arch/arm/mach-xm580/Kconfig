if ARCH_XM580

menu "xm580 board feature"

config MACH_XM580
	bool "Support xm580 platform"
	select CPU_V7
	select ARM_GIC
	select ARM_TIMER_SP804
	select PL330
	select DMA_SHARED_BUFFER
	help
	  Includes support for the  xm580 platform.

	  This includes specific configurations for the module and
	  its peripherals.

config DEFAULT_BUSCLK
	int "DEFAULT_BUSCLK"
	default "50000000"
	help
	  Default AHB clock rate

config XM580_RTC
	bool "Add support for XM 580 RTC"
	default "y"
	help
	  Includes support for the xm580 RTC device.

config XM580_VO
	bool "Add support for XM 580 Video Output"
	default "y"
	help
	  Includes support for the xm580 VO device.

config XM580_AUDIO
	bool "Add support for XM 580 Audio Output"
	default "y"
	help
	  Includes support for the xm580 Audio device.

endmenu

endif
